{
    "name": "ems/framework",
    "description": "A framework agnostic php library which provides the basics for cmsable and other frameworks",
    "type": "library",
    "require": {
        "php": ">=5.6.0",
        "psr/http-message": "1.*",
        "psr/log": "~1.0",
        "squizlabs/php_codesniffer": "3.5.4"
    },
    "require-dev": {
        "phpunit/phpunit": "6.*",
        "mockery/mockery": "~1.3",
        "illuminate/mail": "5.1.*|5.2.*|5.3.*|5.4.*|5.5.*",
        "illuminate/database": "5.1.*|5.2.*|5.3.*|5.4.*|5.5.*",
        "illuminate/filesystem": "5.1.*|5.2.*|5.3.*|5.4.*|5.5.*",
        "illuminate/validation": "5.1.*|5.2.*|5.3.*|5.4.*|5.5.*",
        "illuminate/view": "5.1.*|5.2.*|5.3.*|5.4.*|5.5.*",
        "illuminate/support": "5.1.*|5.2.*|5.3.*|5.4.*|5.5.*",
        "illuminate/queue": "5.1.*|5.2.*|5.3.*|5.4.*|5.5.*",
        "swiftmailer/swiftmailer": "~5.1",
        "patchwork/jsqueeze": "~2.0",
        "natxet/cssmin": "~3.0",
        "tedivm/jshrink": "~1.1",
        "php-coveralls/php-coveralls": "2.1.*",
        "league/flysystem": "^1.0",
        "internations/http-mock": "0.10.*",
        "ext-pdo": "*",
        "ext-json": "*",
        "nikic/fast-route": "1.3.*"
    },
    "replace": {
        "ems/assets": "self.version",
        "ems/cache": "self.version",
        "ems/contracts": "self.version",
        "ems/core": "self.version",
        "ems/graphics": "self.version",
        "ems/mail": "self.version",
        "ems/model": "self.version",
        "ems/skeleton": "self.version",
        "ems/testing": "self.version",
        "ems/view": "self.version",
        "ems/x-type": "self.version"
    },
    "autoload": {
        "psr-4": {
            "Ems\\": "src/Ems"
        }
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Michael Tils",
            "email": "mtils@web-utils.de"
        }
    ],
    "repositories" : {
        "packagist": {
            "url": "https://packagist.org",
            "type": "composer"
        }
    }
}
