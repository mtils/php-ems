{
    "name": "ems/framework",
    "description": "A framework agnostic php library which provides the basics for cmsable and other frameworks",
    "type": "library",
    "require": {
        "php": ">=5.5.0"
    },
    "require-dev": {
        "phpunit/phpunit": "5.*",
        "mockery/mockery": "~0.9",
        "illuminate/mail": "5.1.*|5.2.*|5.3.*|5.4.*",
        "illuminate/database": "5.1.*|5.2.*|5.3.*|5.4.*",
        "illuminate/filesystem": "5.1.*|5.2.*|5.3.*|5.4.*",
        "illuminate/validation": "5.1.*|5.2.*|5.3.*|5.4.*",
        "illuminate/view": "5.1.*|5.2.*|5.3.*|5.4.*",
        "illuminate/support": "5.1.*|5.2.*|5.3.*|5.4.*",
        "swiftmailer/swiftmailer": "~5.1",
        "patchwork/jsqueeze": "~2.0",
        "natxet/cssmin": "~3.0",
        "tedivm/jshrink": "~1.1",
        "satooshi/php-coveralls": "dev-master"
    },
    "replace": {
        "ems/assets": "self.version",
        "ems/cache": "self.version",
        "ems/contracts": "self.version",
        "ems/core": "self.version",
        "ems/graphics": "self.version",
        "ems/mail": "self.version",
        "ems/model": "self.version",
        "ems/skeleton": "self.version",
        "ems/testing": "self.version",
        "ems/view": "self.version",
        "ems/xtype": "self.version"
    },
    "autoload": {
        "psr-4": {
            "Ems\\": "src/Ems"
        }
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Michael Tils",
            "email": "mtils@web-utils.de"
        }
    ]
}
