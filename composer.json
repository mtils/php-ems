{
    "name": "ems/framework",
    "description": "A framework agnostic php library which provides the basics for cmsable and other frameworks",
    "type": "library",
    "require": {
        "php": ">=8.2.0",
        "psr/http-message": "1.*",
        "psr/http-server-middleware": "1.*",
        "psr/log": "~1.0",
        "psr/container": "1.*|2.0.*",
        "squizlabs/php_codesniffer": "3.*",
        "ext-pdo": "*",
      "ext-json": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "11.1.2",
        "mockery/mockery": "~1.6",
        "illuminate/mail": "11.*",
        "illuminate/config": "11.*",
        "illuminate/contracts": "11.*",
        "illuminate/container": "11.*",
        "illuminate/database": "11.*",
        "illuminate/filesystem": "11.*",
        "illuminate/validation": "11.*",
        "illuminate/view": "11.*",
        "illuminate/support": "11.*",
        "illuminate/queue": "11.*",
        "swiftmailer/swiftmailer": "6.*",
        "patchwork/jsqueeze": "~2.0",
        "natxet/cssmin": "~3.0",
        "tedivm/jshrink": "~1.7",
        "php-coveralls/php-coveralls": "2.7.*",
        "league/flysystem": "3.*",
        "nikic/fast-route": "1.3.*",
        "fakerphp/faker": "2.*@dev"
    },
    "replace": {
        "ems/assets": "self.version",
        "ems/cache": "self.version",
        "ems/contracts": "self.version",
        "ems/core": "self.version",
        "ems/graphics": "self.version",
        "ems/mail": "self.version",
        "ems/model": "self.version",
        "ems/skeleton": "self.version",
        "ems/testing": "self.version",
        "ems/view": "self.version",
        "ems/x-type": "self.version"
    },
    "autoload": {
        "psr-4": {
            "Ems\\": "src/Ems"
        }
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Michael Tils",
            "email": "mtils@web-utils.de"
        }
    ],
    "repositories" : {
        "packagist": {
            "url": "https://packagist.org",
            "type": "composer"
        }
    }
}
