{
    "name": "ems/framework",
    "description": "A framework agnostic php library which provides the basics for cmsable and other frameworks",
    "type": "library",
    "require": {
        "php": ">=7.2.0",
        "psr/http-message": "1.*",
        "psr/http-server-middleware": "1.*",
        "psr/log": "~1.0",
        "psr/container": "1.*|2.0.*",
        "squizlabs/php_codesniffer": "3.*",
        "ext-pdo": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "6.*",
        "mockery/mockery": "~1.3",
        "illuminate/mail": "5.*|6.*",
        "illuminate/config": "5.*|6.*",
        "illuminate/contracts": "5.*|6.*",
        "illuminate/container": "5.*|6.*",
        "illuminate/database": "5.*|6.*",
        "illuminate/filesystem": "5.*|6.*",
        "illuminate/validation": "5.*|6.*",
        "illuminate/view": "5.*|6.*",
        "illuminate/support": "5.*|6.*",
        "illuminate/queue": "5.*|6.*",
        "swiftmailer/swiftmailer": "5.*|6.0.*",
        "patchwork/jsqueeze": "~2.0",
        "natxet/cssmin": "~3.0",
        "tedivm/jshrink": "~1.1",
        "php-coveralls/php-coveralls": "2.1.*",
        "league/flysystem": "1.*",
        "internations/http-mock": "0.10.*|0.11.*|0.12.*|0.13.*|0.14.*",
        "ext-json": "*",
        "nikic/fast-route": "1.3.*",
        "fakerphp/faker": "^1.16"
    },
    "replace": {
        "ems/assets": "self.version",
        "ems/cache": "self.version",
        "ems/contracts": "self.version",
        "ems/core": "self.version",
        "ems/graphics": "self.version",
        "ems/mail": "self.version",
        "ems/model": "self.version",
        "ems/skeleton": "self.version",
        "ems/testing": "self.version",
        "ems/view": "self.version",
        "ems/x-type": "self.version"
    },
    "autoload": {
        "psr-4": {
            "Ems\\": "src/Ems"
        }
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Michael Tils",
            "email": "mtils@web-utils.de"
        }
    ],
    "repositories" : {
        "packagist": {
            "url": "https://packagist.org",
            "type": "composer"
        }
    }
}
